<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/space_small"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/space_medium"
        android:layout_marginRight="@dimen/space_medium"
        android:layout_marginTop="@dimen/space_medium"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgDailyactivitiesInner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <com.versatilemobitech.bhattivikramarka.views.CenturyGothicTextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="17/10/2017"
                android:textColor="@color/app_color"
                android:textSize="@dimen/text_vsmall" />

            <ImageView
                android:id="@+id/imgShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/share" />
        </RelativeLayout>

        <com.versatilemobitech.bhattivikramarka.views.CenturyGothicTextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/space_xmedium"
            android:layout_marginTop="@dimen/space_small"
            android:textColor="@color/app_color"
            android:textSize="@dimen/text_medium" />

        <com.versatilemobitech.bhattivikramarka.views.CenturyGothicTextView
            android:id="@+id/txtContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/space_xmedium"
            android:layout_marginTop="@dimen/space_small"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_small" />
    </LinearLayout>
</ScrollView>